{
  "manifest_version": 3,
  "name": "Khaya Translator",
  "version": "1.1",
  "description": "Translate selected text using the Khaya API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "commands"
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "toggle-widget": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle Translator Widget"
    }
  }
}
